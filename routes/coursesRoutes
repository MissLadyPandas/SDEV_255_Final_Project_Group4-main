const express = require('express');
const Course = require('../models/courses');

const router = express.Router();

// Render the create course page
router.get('/create', (req, res) => {
  res.render('create', { title: 'Create Course' });
});

// Get all courses
router.get('/', async (req, res, next) => {
  try {
    const courses = await Course.find();
    res.render('courses', { title: 'All Courses', courses });
  } catch (err) {
    next(err);
  }
});

// Get single course
router.get('/:id', async (req, res, next) => {
  const id = req.params.id;
  try {
    const course = await Course.findById(id);
    if (!course) {
      return res.status(404).send('Course not found');
    }
    res.render('course-details', { title: 'Course Details', course });
  } catch (err) {
    next(err);
  }
});

// Create a new course
router.post('/', async (req, res, next) => {
  try {
    const { name, credits, description } = req.body;
    if (!name || !description) {
      throw new Error('Name and description are required');
    }
    const newCourse = new Course({ name, credits, description });
    await newCourse.save();
    res.redirect('/');
  } catch (err) {
    next(err);
  }
});

// Create course using a different route
router.post('/create-course', async (req, res, next) => {
  try {
    const { name, credits, description } = req.body;
    if (!name || !description) {
      throw new Error('Name and description are required');
    }
    const course = new Course(req.body);
    await course.save();
    res.json({ redirect: '/' });
  } catch (err) {
    next(err);
  }
});

// Delete a course
router.post('/:id/delete', async (req, res, next) => {
  const courseId = req.params.id;
  try {
    await Course.findByIdAndDelete(courseId);
    res.redirect('/');
  } catch (err) {
    next(err);
  }
});

module.exports = router;
